{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@ui/*": ["src/ui/*"],
      "@style/*": ["src/ui/style/*"],
      "@hooks/*": ["src/ui/hooks/*"],
      "@widgets/*": ["src/ui/widgets/*"],
      "@modals/*": ["src/ui/modals/*"],
      "@components/*": ["src/ui/components/*"],
      "@backend/*": ["src/backend/*"],
      "@assets/*": ["assets/*"]
    }
  }
}
